<div class="card border-dark mb-3 mx-auto text-right" style="width: 35rem;" >
<div class="card-body">
  <h5 class="card-title text-center"> تسجيل الدخول</h5>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
  <label for="Email"> البريد الالكتروني</label> <br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
  <label for="password">كلمة المرور</label> <br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
    <label for="remember_me">تذكرني</label>
      <%= f.check_box :remember_me %>
     
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "تسجيل الدخول" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>