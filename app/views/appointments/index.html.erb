
<section class="service-sec mt-5">
  <div class="mt-5 text-center mx-auto ">
     <p>مجمع آراك الرقمي لطب الأسنان</p>
    <div class="card border-light mb-3 mx-auto " >
        <div class="card-body">
            <h5 class="card-title text-center text-color"> المواعيد </h5>
             <div class="row mb-5">
                <div class="col text-left">
                  <%= link_to 'موعد جديد', new_appointment_path,  class:"profile-edit-btn" %> |
                  <%= link_to 'رجوع', appointments_path, class:"profile-edit-btn"  %>
                  
                </div>
                <%= form_tag appointments_path, :method =>'get' do%>
                  <%= text_field_tag :search, params[:search]%>
                  <%= submit_tag 'Search'%>
                  <% end%>
              </div>
         

            <table class="container text-center mr-5 mb-5">
              <thead>
            <tr scope="col">
            <th colspan="3"> إعدادات</th>
            <th>التاريخ</th>
              <th>التخصص</th>
              <th>الدكتور</th>
                <%if user_signed_in?%> 
              <%if current_user.try(:admin?)%>
              <th>المراجع </th>
              <%end%>
            </tr>
              </thead>
          <tbody>
            <% @appointments.each do |appointment| %>
              <tr scope="row" >
              <td colspan="3"><%= link_to 'إظهار', appointment ,class:" profile-edit-btn"%>
              <%= link_to 'تعديل', edit_appointment_path(appointment),class:" profile-edit-btn" %>
              <%= link_to 'حذف', appointment, class:" profile-edit-btn",method: :delete, data: { confirm: 'هل أنت متأكد من حذف الموعد ؟' } %></td>
              <td><%= appointment.appointment_on %></td>
              <td><%= appointment.doctor.speciality %></td>
              <%if current_user.try(:admin?)%>
              <td><%= link_to appointment.doctor.name, "/appointments/doctors/#{appointment.doctor.name}",class:" profile-edit-btn"%></td>
              <%else%>
              <td><%= appointment.doctor.name %></td>
              <%end%>
                  <% if current_user.try(:admin?)%>
              <td><%= appointment.user.first_name%><td>

              <%end%>
              <%end%>

              </tr>
            <% end %>
          </tbody>
          </table>
            
          </div>

          </div>
    </div>
</section>
